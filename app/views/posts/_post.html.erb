 <tr>
    <td>
      <%= post.id %>
    </td>
    <td>
      <%= post.date %>
    </td>
    <td>
      <%= post.user.full_name %>
    </td>
    <td>
      <%= post.overtime_request %>
    </td>
    <td>
      <%= link_to post.rationale, post_path(post) %>
    </td>
    <td>
      <%= status_label post.status.to_s %>
    </td>
    <td>
      <%= link_to '', edit_post_path(post), class: 'glyphicon glyphicon-pencil index-icons', id: "edit_#{post.id}" if policy(post).update? %>
    </td>
    <td>
      <%= link_to '', post_path(post), method: :delete, class: 'glyphicon glyphicon-trash index-icons', id: "delete_post_#{post.id}_from_index", data: {confirm: 'Are you sure?'} %>
    </td>
  </tr>