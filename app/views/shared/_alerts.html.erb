<% if flash[:alert]%>
  <%= js add_gritter(flash[:alert], :title => "Overtime App Notification!", :sticky => true, time: 5000) %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], :title => "Overtime App Notification!", :sticky => true, time: 5000) %>
<% else %>
  <%= js add_gritter(flash[:error], :title => "Overtime App Notification!", :sticky => true, time: 5000) %>
<% end %>